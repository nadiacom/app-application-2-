<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/date_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:" />

    <EditText
        android:id="@+id/edit_date_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/date_intervention"
        android:ems="10"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/heure_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_toRightOf="@+id/edit_date_intervention"
        android:text="Heure:" />

    <EditText
        android:id="@+id/edit_heure_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heure_intervention"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/vps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_date_intervention"
        android:layout_marginTop="47dp"
        android:text="VPS:" />

    <EditText
        android:id="@+id/edit_vps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vps"
        android:layout_alignBottom="@+id/vps"
        android:layout_toRightOf="@+id/vps"
        android:ems="10" />

    <TextView
        android:id="@+id/poste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_vps"
        android:layout_alignLeft="@+id/heure_intervention"
        android:text="Poste:" />

    <EditText
        android:id="@+id/edit_poste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/poste"
        android:layout_alignBottom="@+id/poste"
        android:layout_toRightOf="@+id/poste"
        android:ems="10" />

    <TextView
        android:id="@+id/adresse_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_vps"
        android:layout_marginTop="41dp"
        android:text="Adresse de l'\intervention:" />

    <EditText
        android:id="@+id/edit_adresse_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adresse_intervention"
        android:layout_alignBottom="@+id/adresse_intervention"
        android:layout_toRightOf="@+id/adresse_intervention"
        android:ems="10" />

</RelativeLayout>

