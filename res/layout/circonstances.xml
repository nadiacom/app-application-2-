<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/homme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Homme" />

    <CheckBox
        android:id="@+id/femme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/homme"
        android:text="Femme" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/homme"
        android:layout_marginTop="18dp"
        android:text="Age:" />

    <EditText
        android:id="@+id/edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_toRightOf="@+id/age"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/circonstances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_age"
        android:layout_marginTop="22dp"
        android:text="CIRCONSTANCES de la détresse:" />

    <EditText
        android:id="@+id/edit_circonstances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/circonstances"
        android:layout_alignBottom="@+id/circonstances"
        android:layout_toRightOf="@+id/circonstances"
        android:ems="10" />

    <TextView
        android:id="@+id/plaintes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_circonstances"
        android:layout_marginTop="32dp"
        android:text="PLAINTES principales exprimées par la victime:" />

    <EditText
        android:id="@+id/edit_plaintes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/plaintes"
        android:layout_alignBottom="@+id/plaintes"
        android:layout_toRightOf="@+id/plaintes"
        android:ems="10" />

</RelativeLayout>
